server {
    listen 80 default_server;
    listen [::]:80 default_server ipv6only=on;

    root /var/www/application/current/app/webroot;
    index index.php index.html index.htm;

    location / {
        try_files $uri $uri/ /index.php?$args;
    }

    location ~ \.php$ {
        try_files $uri =404;
        include /etc/nginx/fastcgi_params;
        fastcgi_pass unix:/var/run/php5-fpm.sock;
        fastcgi_index   index.php;
        fastcgi_intercept_errors on;
        fastcgi_param SCRIPT_FILENAME $document_root$fastcgi_script_name;
        fastcgi_param RDS_HOSTNAME    ##RDS_HOSTNAME##;
        fastcgi_param RDS_USERNAME    ##RDS_USERNAME##;
        fastcgi_param RDS_PASSWORD    ##RDS_PASSWORD##;
        fastcgi_param RDS_DB_NAME     ##RDS_DB_NAME##;
        fastcgi_param AWS_ACCESS_ID   ##AWS_ACCESS_ID##;
        fastcgi_param AWS_SECRET_KEY  ##AWS_SECRET_KEY##;
        fastcgi_param BUCKET_NAME     ##BUCKET_NAME##;
        fastcgi_param IMAGE_BUCKET_NAME  ##IMAGE_BUCKET_NAME##;
        fastcgi_param REGION          ##REGION##;
        fastcgi_param SQS_URL         ##SQS_URL##;
        fastcgi_param DEBUG:          ##DEBUG##;
    }
}
