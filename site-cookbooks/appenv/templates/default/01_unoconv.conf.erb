[program:xvfb]
command=Xvfb :1
user=<%= node['appenv']['batch_user'] %>
autostart=true
autorestart=true
stdout_logfile=/var/log/xvfb.log
redirect_stderr=true

[program:unoconv]
command=unoconv --listener
user=<%= node['appenv']['batch_user'] %>
autostart=true
autorestart=true
stdout_logfile=/var/log/unoconv.log
redirect_stderr=true
environment=DISPLAY=:1
stopasgroup=true
